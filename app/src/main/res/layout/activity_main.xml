<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="64dp"
    tools:context="com.example.administrator.easyapplication.MainActivity"
    android:orientation="horizontal"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="193dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退币--"
            android:onClick="tuibi"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="请输入货道编号：" />

        <!--<TextView-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true" />-->

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="VenderoutActionClicked"
            android:text="出货" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="请输入货道价格：" />

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="SetPriceButtonClicked"
            android:text="设置货道价格" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetReadStatusCommClicked"
            android:text="串口状态" />


        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetMachineVersionClicked"
            android:text="获取机器号" />


        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetSystemTimeClicked"
            android:text="获取机器时间" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="请输入设置时间：" />

        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="SetSystemTimeClicked"
            android:text="设置机器时间" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="GetChannelSettingClicked"
            android:text="获取货道设置信息" />


        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetChannelErrorClicked"
            android:text="请求料道故障信息" />

        <Button
            android:id="@+id/button8"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetChannelPriceClicked"
            android:text="请求料道价格信息" />

        <Button
            android:id="@+id/button9"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetMachineStatusClicked"
            android:text="请求系统设置信息" />

        <Button
            android:id="@+id/button10"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:onClick="GetMachinePollClicked"
            android:text="请求POLL信息" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:orientation="vertical"
        android:weightSum="1">


        <ScrollView
            android:layout_width="190dp"
            android:id="@+id/scrollView"
            android:layout_height="456dp"
            android:layout_alignParentTop="true"
            android:layout_weight="15.92">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textview"
                android:layout_height="match_parent" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>
